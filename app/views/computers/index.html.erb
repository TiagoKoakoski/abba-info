      <thead>
        <tr>
          <th>Nome</th>
          <th class="hidden-xs">Empresa</th>
          <th>Departamento</th>
          <th class="hidden-xs">Usu√°rio</th>
        </tr>
      </thead>
      <tbody>
        <% @computers.each do |c| %>
          <tr>
            <td><%= link_to c.code, c %></td>
            <td class="hidden-xs"><%= c.company.fantasy_name %></td>
            <td><%= c.departament.name %></td>
            <td class="hidden-xs"><%= c.person.name  %></td>
          </tr>
        <% end %>
