<!DOCTYPE html>
<html>
  <head>
    <title>Abba-Info</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!--<link href="http://assets.locaweb.com.br/locastyle/3.10.1/stylesheets/locastyle.css" rel="stylesheet" type="text/css">
    <link rel="icon" sizes="192x192" href="/locawebstyle/assets/images/ico-boilerplate.png">-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="ls-topbar ">

    <% if user_signed_in? %>
      <!-- Barra de Notificações -->
      <div class="ls-notification-topbar">
        
        <!-- Dropdown com detalhes da conta de usuário -->
        <div data-ls-module="dropdown" class="ls-dropdown ls-user-account">
          <a href="" class="ls-ico-user">
            <!-- <img src="/locawebstyle/assets/images/locastyle/avatar-example.jpg" alt="" /> -->
            <span class="ls-name"><%= current_user.email %></span>
          </a> 
          <nav class="ls-dropdown-nav ls-user-menu">
            <ul>
              <li><%= link_to "Sair", destroy_user_session_path, method: :delete %> </li>
            </ul>
          </nav>
        </div>
      </div>
    <% else %>
      <div class="ls-notification-topbar">
        <div data-ls-module="dropdown" class="ls-dropdown ls-user-account">
            <a href="/users/sign_in" class="ls-ico-user">
              <!-- <img src="/locawebstyle/assets/images/locastyle/avatar-example.jpg" alt="" /> -->
              <span class="ls-name"></span>
            </a>
            <nav class="ls-dropdown-nav ls-user-menu">
              <div id='user'>
                <ul>
                  <li><a href="/users/sign_in">Entrar</a></li>
                </ul>
              </div>
            </nav>
        </div>
      </div>
    <% end %>

  <span class="ls-show-sidebar ls-ico-menu"></span>

  <!-- <a href="/locawebstyle/documentacao/exemplos//pre-painel"  class="ls-go-next"><span class="ls-text">Voltar à lista de serviços</span></a> -->

    <!-- Nome do produto/marca com sidebar -->
      <h1 class="ls-brand-name">
        <a href="/" class="ls-ico-checkmark-circle">
          <small>Sistema de gestão</small>
          ABBA - TI
        </a>
      </h1>

    <!-- Nome do produto/marca sem sidebar quando for o pre-painel  -->
  </div>


  <aside class="ls-sidebar">

    <div class="ls-sidebar-inner">
        <a href="/locawebstyle/documentacao/exemplos//pre-painel"  class="ls-go-prev"><span class="ls-text">Voltar à lista de serviços</span></a>

        <nav class="ls-menu">
          <ul>
            <div id='listas'>
            <li><a href="/" class="ls-ico-dashboard" title="Dashboard">Inicio</a></li>
            
            <li>
              
                <a href="" class="ls-ico-book" title="Listas">Listar</a>
                <ul>
                  <li><a href="/companies">Empresas</a></li>
                  <li><a href="/departaments">Departamentos</a></li>
                  <li><a href="/people">Pessoas</a></li>
                  <li><a href="/emails">Emails</a></li>
                  <li><a href="/computers">Computadores</a></li>
                  <li><a href="/devices">Dispositivos</a></li>
                </ul>
              </div>
            </li>
            <% if user_signed_in? %>
              <div id='cadastros'>
                <li>
                
                  <a href="" class="ls-ico-pencil" title="Cadastros">Cadastrar</a>
                  <ul>
                    <li><a href="/companies/new">Empresas</a></li>
                    <li><a href="/departaments/new">Departamentos</a></li>
                    <li><a href="/people/new">Pessoas</a></li>
                    <li><a href="/emails/new">Emails</a></li>
                    <li><a href="/computer_types/new">Tipo de computador</a></li>
                    <li><a href="/operating_systems/new">S.O.</a></li>
                    <li><a href="/computers/new">Computador</a></li>
                    <li><a href="/devices/new">Dispositivos</a></li>
                  </ul>
                </div>
              </li>
            <%end%>
          </ul>
        </nav>
    </div>
  </aside>

    <main class="ls-main ">
      <div class="container-fluid">
        <div id='avisos'>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>

        <%= yield %>
      </div>
    </main>

    <script type="text/javascript" src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <!--<script src="http://assets.locaweb.com.br/locastyle/3.10.1/javascripts/locastyle.js" type="text/javascript"></script>-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>
