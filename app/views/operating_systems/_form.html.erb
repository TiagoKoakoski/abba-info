<%= form_with model: @operating_system do |f| %>
  <label class="ls-label col-md-3">
    <div>
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
    </div>
  </label>

  <label class="ls-label col-md-3">
    <div class="ls-custom-btn" >
      <%= f.submit 'Salvar', class: "ls-btn" %>
    </div>
  </label>
<% end %>