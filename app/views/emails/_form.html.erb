<%= form_with model: @email do |f| %>
  <div class="input-group mt-4">
    <span class="input-group-text"><%= f.label :account, 'Conta' %></span>
    <input type="text" name="email[account]" id="email_account" class="form-control" placeholder="<%= @email.account || "Conta"%>" aria-label="With textarea"/>
  </div>

  <div class="input-group mt-4">
    <span class="input-group-text"><%= f.label :password, 'Senha' %></span>
    <input type="password" name="email[password]" id="email_password" class="form-control" placeholder="Senha" aria-label="With textarea"/>
  </div>

  <div class="input-group mt-4 mb-3">
    <label class="input-group-text" for="inputGroupSelect01"><%= f.label :company_id, 'Empresa' %></label>
    <%= f.collection_select(:company_id, Company.all, :id, :fantasy_name , {class: "form-select", id: "inputGroupSelect01"})%>
  </div>
    
  <div class="input-group mt-4 mb-3">
    <label class="input-group-text" for="inputGroupSelect01"><%= f.label :departament_id, 'Departamento' %></label>
    <%= f.collection_select(:departament_id, Departament.all, :id, :name, {class: "form-select", id: "inputGroupSelect01"})%>
  </div>
    
  <div class="input-group mt-4 mb-3">
    <label class="input-group-text" for="inputGroupSelect01"><%= f.label :person_id, 'Nome do Usuário' %></label>
    <%= f.collection_select(:person_id, Person.all.active, :id, :name, {class: "form-select", id: "inputGroupSelect01"})%>
  </div>

  <div class="input-group mt-4">
    <span class="input-group-text"><%= f.label :note,'Observação:' %></span>
    <input type="text" name="email[note]" id="email_note" class="form-control" placeholder="<%= @email.note || "Observação"%> aria-label="With textarea"/>
  </div>

  <div class="mt-4">
    <%= f.submit 'Salvar', class: "btn btn-secondary mt4" %> <%= link_to 'Voltar', :back, class: "btn btn-secondary"%>
  </div>
<% end %>