<div>
  <%= form_with model: @person do |f| %>

    <div class="input-group mt-4">
      <span class="input-group-text"><%= f.label :name,'Nome' %></span>
      <input type="text" name="person[name]" id="person_name" class="form-control" placeholder="Nome Completo" aria-label="With textarea"/>
    </div>
    
    <div class="input-group mt-4 mb-3">
      <label class="input-group-text" for="inputGroupSelect01"><%= f.label :company_id, 'Empresa' %></label>
      <%= f.collection_select(:company_id, Company.all, :id, :fantasy_name , {class: "form-select", id: "inputGroupSelect01"})%>
    </div>

    <div class="input-group mt-4 mb-3">
      <label class="input-group-text" for="inputGroupSelect01">Departamento</label>
      <%= f.collection_select(:departament_id, Departament.all, :id, :name, {class: "form-select", id: "inputGroupSelect01"})%>
    </div>

    <div class="input-group mt-4">
      <span class="input-group-text"><%= f.label :branch_line,'Ramal' %></span>
      <input type="text" name="person[branch_line]" id="person_branch_line" class="form-control" placeholder="30XX" aria-label="With textarea"/>
    </div>

    <div class="mt-4">
      <%= f.submit 'Salvar', class: "btn btn-secondary mt4" %>
    </div>
  <% end %>
</div>