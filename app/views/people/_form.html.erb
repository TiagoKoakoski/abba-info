<%= form_with model: @person do |f| %>
  <p>
    <label class="ls-label">
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name, placeholder: "Nome completo" %>
    </label>
  </p>

  <p>
    <label class="ls-label">
        <%= f.label :company_id, 'Empresa' %>
        <%= f.collection_select(:company_id, Company.all, :id, :fantasy_name) %>
    </label>
  </p>

  <p>
    <label class="ls-label">
      <%= f.label :departament_id, 'Departamento' %>
      <%= f.collection_select(:departament_id, Departament.all, :id, :name) %>
    </label>
  </p>
  
  <p>
    <label class="ls-label">
      <%= f.label :branch_line, 'Ramal' %>
      <%= f.text_field :branch_line, placeholder: "30XX" %>
    </label>
  </p>

  <p>
    <label class="ls-label">
      <%= f.label :state %>
      <%= f.select :state, Person.states.keys, selected: @person.state || "active" %>
    </label>
  </p>

  <div class="ls-actions-btn">
    <%= f.submit 'Salvar', class: 'ls-btn' %>
  </div>
<% end %>