<div id="people" class="mt-4">
  <% if @people.empty? %>
    Nenhuma pessoa cadastrada
  <% else %>
      <table class="table table-striped table-hover">
        <thead class="text-dark">
          <tr>
            <th scope="col">Empresa</th>
            <th scope="col">Departamento</th>
            <th scope="col">Nome</th>
            <th scope="col">Ramal</th>
            <th scope="col">Detalhes</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
            <% @people.each do |p| %>
                <tr>
                    <td><%= p.company.fantasy_name %></td>
                    <td><%= p.departament.name %></td>
                    <td><%= link_to p.name, person_path(p.id) %></td>
                    <td><%= p.branch_line %></td>
                    <td><a href=<%= person_path(p.id)%> title="">
                        <i class="bi bi-eye h4 link-secondary"></i></a>&nbsp
                        <% if p.active? %>
                          <i class="bi bi-person-check h4 text-success"></i>
                        <% else %>
                          <i class="bi bi-person-slash h4 text-danger"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
      </table>
  <% end %>
</div>